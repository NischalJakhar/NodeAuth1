extends layout

block content
 h2.page-header Login
 p Please login below
 if errors
  each error, i in errors
   div.alert.alert-danger #{error.msg}
 form(method='post', action='/users/login')
  .form-group
   label Username
   input.form-control(name='username', type='text', placeholder='Enter Username')
  .form-group
   label Password
   input.form-control(name='password', type='password', placeholder='Enter Password')
  input.btn.btn-primary(type='submit', name='submit', value='Login')
 button.myButton.btn.btn-facebook
  a(href='http://localhost:3000/users/login/facebook') Sign in with Facebook
 button.myButton.btn.btn-google
  a(href='http://localhost:3000/users/login/google') Sign in with Google